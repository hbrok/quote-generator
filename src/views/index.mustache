{{ %FILTERS }}
<!doctype html>
<html class="no-js" lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <title>Quotes</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <link rel="stylesheet" href="css/main.css">
        <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family={{ font | urlencode }}&text={{ unique_chars }}&subset=latin">

        <!-- Dynamic CSS. -->
        <style>
            .quote-text {
                font-family: "{{ font }}";
            }

            a:hover,
            .quote-link,
            ::selection,
            .button,
            .button.hollow:hover {
                color: #{{ color_one }};
            }

            body,
            .quote-link:hover {
                background-color: #{{ color_one }};
            }

            body,
            a,
            .quote-link:hover,
            .button:hover,
            .button.hollow,
            .footer {
                color: #{{ color_two }};
            }

            body,
            .actions,
            .footer,
            .button:hover,
            .button.hollow {
                border-color: #{{ color_two }};
            }

            a:hover,
            .quote-link,
            ::selection,
            .button,
            .button.hollow:hover {
                background-color: #{{ color_two }};
            }
        </style>
    </head>

    <body>
        <main class="main-content">
            <blockquote class="quote">
                <p class="quote-text">{{ quote.quoteText }}</p>
                <footer class="quote-attribution">
                    <a class="button" href="{{ quote.quoteLink }}">
                        <span class="quote-author">{{ quote.quoteAuthor }}</span>
                    </a>
                </footer>
                <a href="{{ quoteLink.all }}">link</a> |
                <a href="{{ quote.quoteLink }}">source</a> |
                <a href="https://fonts.google.com/specimen/{{ font | urlencode }}">font</a>
            </blockquote>

            <div class="actions">
                <p>Generate quote with:</p>
                <a class="button hollow" href="{{ quoteLink.font }}">New Font</a>
                <a class="button hollow" href="{{ quoteLink.colors }}">New Colors</a>
                <a class="button hollow" href="{{ quoteLink.quote }}">New Quote</a>

                <p>What do you think about this accessible color combination?</p>
                <a class="button" href="http://randoma11y.com/#/?hex={{ color_one }}&compare={{ color_two }}">Vote on these colors</a>
            </div>
        </main>

        <footer class="footer">
            <p class="colophon">
                Colors: <a href="http://www.randoma11y.com/">randoma11y.com</a> |
                Quotes: <a href="http://forismatic.com/">forismatic.com</a><br>
                Made for <a href="https://a-k-apart.com/">10k Apart</a>
            </p>
        </footer>
    </body>
</html>
