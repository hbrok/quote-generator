{{ %FILTERS }}
<!doctype html>
<html class="no-js" lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <title>Quotes</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family={{ font }}&text={{ unique_chars }}&subset=latin">

        <!-- Main CSS. -->
        <style>/*! HTML5 Boilerplate v5.3.0 | MIT License | https://html5boilerplate.com/ */html{font-size:1em;line-height:1.4}body{margin:0;padding:0;border-top:10px solid;font-family:-apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Oxygen,Ubuntu,Cantarell,Fira Sans,Droid Sans,Helvetica Neue,sans-serif;-webkit-transition:background-color .3s;transition:background-color .3s}a{border-bottom:1px solid;font-weight:700;text-decoration:none}::-moz-selection{text-shadow:none}::selection{text-shadow:none}#js-quote-source,.button{padding:.5rem;display:inline-block;border:2px solid;text-decoration:none;text-transform:uppercase;-webkit-transition:all .2s;transition:all .2s;font-weight:400}.button.hollow,.button:hover{border:2px solid;background-color:transparent}.button[data-loading]{opacity:.5}.actions{padding:0 0 1.5rem;text-align:center}.actions .button{margin-bottom:.5rem}.actions h1{font-size:1.75rem}#quote{width:85%;margin:0 auto 5rem}@media (min-width:650px){#quote{width:75%}}@media (min-width:1000px){#quote{width:60%}}.quote-text{font-size:1.75rem;line-height:1.25;opacity:1;-webkit-transition:opacity .3s;transition:opacity .3s}@media (min-width:650px){.quote-text{font-size:2.5rem}}@media (min-width:1000px){.quote-text{font-size:3rem}}.quote-text.loading,.wf-loading .quote-text{opacity:0}.quote-attribution{text-align:right;font-size:1rem}@media (min-width:1000px){.quote-attribution{font-size:1.5rem}}#js-quote-source{text-transform:lowercase}.vote-actions{border-top:3px solid}.link-actions{padding:2rem 1rem;background-color:rgba(0,0,0,.05);text-align:center}.link-actions,.vote-actions{margin:0 auto;padding:2rem 15%;text-align:center}.footer{text-align:center;color:#efefef;background-color:rgba(0,0,0,.1);font-size:.85rem;padding:.75rem;border-bottom:15px solid;opacity:1.5}
        </style>

        <!-- Starting Dynamic CSS. -->
        <style>
            .quote-text {
                font-family: {{ font }};
            }

            a:hover,
            ::selection,
            .button,
            .button.hollow:hover,
            .button.hollow[data-loading] {
                color: #{{ color_one }};
            }

            body{
                background-color: #{{ color_one }};
            }

            body,
            a,
            .button:hover,
            .button.hollow,
            .footer {
                color: #{{ color_two }};
            }

            body,
            .vote-actions,
            .footer,
            .button:hover,
            .button.hollow,
            #js-quote-source{
                border-color: #{{ color_two }};
            }

            a:hover,
            ::selection,
            .button,
            .button.hollow:hover,
            .button.hollow[data-loading] {
                background-color: #{{ color_two }};
            }
        </style>
    </head>

    <body data-colorone="{{ color_one }}" data-colortwo="{{ color_two }}" data-font="{{ font }}">
        <div class="actions">
            <h1>Generate A New Quote</h1>
            <a id="js-new-font" class="button hollow" href="{{ quoteLink.font }}">
                <span class="label">New Font</span>
            </a>

            <a id="js-new-colors" class="button hollow" href="{{ quoteLink.colors }}">
                <span class="label">New Colors</span>
            </a>

            <a id="js-new-quote" class="button hollow" href="{{ quoteLink.quote }}">
                <span class="label">New Quote</span>
            </a>
        </div>

        <main id="main" class="main-content">
            <blockquote id="quote">
                <p id="js-quote-text" class="quote-text">{{ quote.quoteText }}</p>
                <footer class="quote-attribution">
                    <cite>
                        <a id="js-quote-link" class="button" href="{{ quote.quoteLink }}">
                            <span id="js-quote-author" class="quote-author">{{ quote.quoteAuthor }}</span>
                        </a>
                    </cite>
                </footer>
            </blockquote>

            <div class="vote-actions">
                <p>
                    <strong>Like (or hate) these colors?</strong><br>
                    <small>Help generate more accessible colors by voting on them!</small><br><br>
                    <a id="js-colors-vote-link" class="button" href="http://randoma11y.com/#/?hex={{ color_one }}&compare={{ color_two }}">Vote on these colors</a>
                </p>
            </div>
            <div class="link-actions">
                <p>
                    <strong>Like this quote?</strong><br><small>Copy & paste this link to share it!</small><br><br>
                    <span id="js-quote-source" href="{{ shortQuoteLink }}">{{ shortQuoteLink }}</span>
                </p>
            </div>

        </main>

        <footer class="footer">

                <p>
                    <a id="js-font-link" href="https://fonts.google.com/specimen/{{ font }}">{{ font }}</a> |
                    <a href="http://randoma11y.com/#/?hex={{ color_one }}&compare={{ color_two }}"><span id="js-color-one">#{{ color_one }}</span> and <span id="js-color-two">#{{ color_two }}</span></a>
                </p>

                <p>
                    Quotes: <a href="http://forismatic.com/">forismatic.com</a> |
                    Colors: <a href="http://www.randoma11y.com/">randoma11y.com</a> |
                    Fonts: <a href="https://fonts.google.com/">fonts.google.com</a>
                </p>

                <p>Made for <a href="https://a-k-apart.com/">10k Apart</a> by <a href="http://www.heatherbrokmeier.com">Heather Brokmeier</a></p>

        </footer>

        <script src="js/main.js" async></script>
        <script>
            App.init();
        </script>
    </body>
</html>
