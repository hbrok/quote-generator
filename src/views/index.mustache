{{ %FILTERS }}
<!doctype html>
<html class="no-js" lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <title>Quotes</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <link rel="stylesheet" href="css/main.css">
        <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family={{ font }}&text={{ unique_chars }}&subset=latin">

        <!-- Dynamic CSS. -->
        <style>
            :root {
              --colorone: #{{ color_one }};
              --colortwo: #{{ color_two }};
              --font: {{ font }};
              /*--blur: 10px;*/
            }
            .quote-text {
                font-family: var(--font);
            }

            a:hover,
            .quote-link,
            ::selection,
            .button,
            .button.hollow:hover {
                /*color: #{{ color_one }};*/
                color: var(--colorone);
            }

            body,
            .quote-link:hover {
                /*background-color: #{{ color_one }};*/
                background-color: var(--colorone);
            }

            body,
            a,
            .quote-link:hover,
            .button:hover,
            .button.hollow,
            .footer {
                /*color: #{{ color_two }};*/
                color: var(--colortwo);
            }

            body,
            .actions,
            .footer,
            .button:hover,
            .button.hollow {
                /*border-color: #{{ color_two }};*/
                border-color: var(--colortwo);

            }

            a:hover,
            .quote-link,
            ::selection,
            .button,
            .button.hollow:hover {
                /*background-color: #{{ color_two }};*/
                background-color: var(--colortwo);
            }
        </style>
    </head>

    <body data-font="{{ font }}" data-color-one="{{ color_one }}" data-color-two="{{ color_two }}">
        <main class="main-content">
            <blockquote class="quote">
                <p id="js-quote-text" class="quote-text">{{ quote.quoteText }}</p>
                <footer class="quote-attribution">
                    <cite><a id="js-quote-link" class="button" href="{{ quote.quoteLink }}">
                        <span id="js-quote-author" class="quote-author">â€” {{ quote.quoteAuthor }}</span>
                    </a></cite>
                </footer>
            </blockquote>

            <div class="actions">
                <p>Generate quote with:</p>
                <a id="js-new-font" class="button hollow" href="{{ quoteLink.font }}">New Font</a>
                <a id="js-new-colors" class="button hollow" href="{{ quoteLink.colors }}">New Colors</a>
                <a id="js-new-quote" class="button hollow" href="{{ quoteLink.quote }}">New Quote</a>

                <p>What do you think about this accessible color combination?</p>
                <a id="js-colors-vote-link" class="button" href="http://randoma11y.com/#/?hex={{ color_one }}&compare={{ color_two }}">Vote on these colors</a>
            </div>
        </main>

        <footer class="footer">
            <p class="colophon">
              Sources:
              <a id="js-quote-source" href="{{ quoteLink.all }}">quote</a> |
              <a id="js-font-link" href="https://fonts.google.com/specimen/{{ font }}">font</a>
                <br><br>
                Colors: <a href="http://www.randoma11y.com/">randoma11y.com</a> |
                Quotes: <a href="http://forismatic.com/">forismatic.com</a><br>
                Made for <a href="https://a-k-apart.com/">10k Apart</a>
            </p>
        </footer>

        <script src="js/main.js" async></script>
        <script>
            App.init();
        </script>
    </body>
</html>
