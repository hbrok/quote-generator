{{ %FILTERS }}
<!doctype html>
<html class="no-js" lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <title>Quotes</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family={{ font }}&text={{ unique_chars }}&subset=latin&display=swap">

        <!-- Main CSS. -->
        <style>
            {{ inline_css }}
        </style>

        <!-- Starting Dynamic CSS. -->
        <style>
            .quote-text {
                font-family: {{ font }};
            }

            a:hover,
            ::selection,
            .button,
            .button.hollow:hover,
            .button.hollow[data-loading] {
                color: #{{ color_one }};
            }

            body{
                background-color: #{{ color_one }};
            }

            body,
            a,
            .button:hover,
            .button.hollow,
            .footer {
                color: #{{ color_two }};
            }

            body,
            .link-actions,
            .footer,
            .button:hover,
            .button.hollow,
            #js-quote-source{
                border-color: #{{ color_two }};
            }

            a:hover,
            ::selection,
            .button,
            .button.hollow:hover,
            .button.hollow[data-loading] {
                background-color: #{{ color_two }};
            }
        </style>
    </head>

    <body data-colorone="{{ color_one }}" data-colortwo="{{ color_two }}" data-font="{{ font }}">
        <div class="actions">
            <h1>Generate A New Quote</h1>
            <a id="js-new-font" class="button hollow" href="{{ quoteLink.font }}">
                <span class="label">New Font</span>
            </a>

            <a id="js-new-colors" class="button hollow" href="{{ quoteLink.colors }}">
                <span class="label">New Colors</span>
            </a>

            <a id="js-new-quote" class="button hollow" href="{{ quoteLink.quote }}">
                <span class="label">New Quote</span>
            </a>
        </div>

        <main id="main" class="main-content">
            <blockquote id="quote">
                <p id="js-quote-text" class="quote-text">{{ quote.quoteText }}</p>
                <footer class="quote-attribution">
                    <cite>
                        <a id="js-quote-link" class="button" href="{{ quote.quoteLink }}">
                            <span id="js-quote-author" class="quote-author">{{ quote.quoteAuthor }}</span>
                        </a>
                    </cite>
                </footer>
            </blockquote>

            <div class="link-actions">
                <p>
                    <strong>Like this quote?</strong><br><small>Copy & paste this link to share it!</small><br><br>
                    <span id="js-quote-source" href="{{ shortQuoteLink }}">{{ shortQuoteLink }}</span>
                </p>
            </div>

        </main>

        <footer class="footer">

                <p>
                    Font: <a id="js-font-link" href="https://fonts.google.com/specimen/{{ font }}">{{ font }}</a> |
                    Background: <strong id="js-color-one">#{{ color_one }}</strong> |
                    Text: <strong id="js-color-two">#{{ color_two }}</strong>
                </p>

                <p>
                    Quotes: <a href="http://forismatic.com/">forismatic.com</a> |
                    Colors: <a href="https://github.com/mistic100/RandomColor.php">Random Color</a> &
                            <a href="https://github.com/davidgorges/color-contrast-php">ColorContrast</a> |
                    Fonts: <a href="https://fonts.google.com/">fonts.google.com</a>
                </p>

                <p>Made for <a href="https://a-k-apart.com/">10k Apart</a> by <a href="http://www.heatherbrokmeier.com">Heather Brokmeier</a></p>

        </footer>

        <script src="js/main.js" async></script>
        <script>
            App.init();
        </script>
    </body>
</html>
